<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>V√©rification de l'email</title>
    <link rel="icon" href="../media/logoCircle.png">

    <style>
        html {
            background-color: #131b2d;
            z-index: -1;
        }
    </style>

    <script src="./javascript/tailwind.min.js"></script>

    <style type="text/tailwindcss">
        @layer base {
            body {
                font-family: 'Inter', sans-serif;
                min-height: 100vh;
            }
                
            ::-webkit-scrollbar {
                width: 6px;
            }
                
            ::-webkit-scrollbar-track {
                background: transparent;
            }
                
            ::-webkit-scrollbar-thumb {
                background: rgba(59, 130, 246, 0.3);
                border-radius: 3px;
            }
                
            ::-webkit-scrollbar-thumb:hover {
                background: rgba(59, 130, 246, 0.5);
            }
                
            * {
                scrollbar-width: thin;
                scrollbar-color: rgba(59, 130, 246, 0.3) transparent;
            }
                
            .trust-badge {
                background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            }
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center p-10">

    <div class="fixed inset-0 -z-0 pointer-events-none">
        <div
            class="absolute top-0 left-0 w-32 h-32 bg-blue-500 rounded-full mix-blend-multiply filter blur-2xl opacity-10 animate-pulse">
        </div>
        <div
            class="absolute bottom-0 right-0 w-32 h-32 bg-violet-500 rounded-full mix-blend-multiply filter blur-2xl opacity-10 animate-pulse delay-1500">
        </div>
    </div>

    <div class="w-full max-w-md bg-[#1e1e1e] rounded-lg shadow-2xl p-8">

        <h1 class="text-2xl font-bold text-orange-400 mb-6">V√©rification requise</h1>

        <div class="mb-6">
            <p class="mb-2 text-gray-300">Un code de v√©rification a √©t√© envoy√© √† :</p>
            <p class="text-blue-400 font-bold text-lg break-all">
                <%= email %>
            </p>
            <p class="text-gray-400 text-sm mt-2">Envoy√© il y a <%= timeCode %> minutes - Valide 30 minutes</p>
        </div>

        <div class="mb-6 p-4 bg-[#2a2a2a] border-l-4 border-orange-400 rounded">
            <p class="flex items-start text-gray-300">
                <span class="mr-2">üì©</span>
                <span>Si vous ne recevez rien dans quelques minutes, pensez √† v√©rifier votre dossier <strong>Spam /
                        Courrier ind√©sirable</strong>.</span>
            </p>
        </div>

        <div id="verifyContainer" class="space-y-4">
            <input type="hidden" id="email" value="<%= email %>">

            <div>
                <label class="block text-gray-300 mb-2 font-bold">Choisissez un pseudo :</label>
                <input type="text" id="username" required
                    class="w-full px-4 py-3 bg-[#2a2a2a] border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Votre pseudo">
                <small id="usernameStatus" class="text-gray-500 text-xs mt-1 block"></small>
            </div>

            <div>
                <label class="block text-gray-300 mb-2 font-bold">Code de v√©rification :</label>
                <input type="text" id="code" maxlength="12" required
                    class="w-full px-4 py-3 bg-[#2a2a2a] border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono tracking-wider"
                    placeholder="Entrez votre code √† 12 chiffres">
                <small class="text-gray-500 text-xs mt-1 block">Exactement 12 chiffres</small>
            </div>

            <button id="verifyBtn"
                class="w-full py-3 px-6 bg-blue-500 hover:bg-blue-600 text-gray-900 font-bold rounded-lg transition-colors duration-200 mt-4">
                Valider
            </button>
        </div>

        <button type="button" id="resendBtn"
            class="w-full py-3 px-6 bg-orange-500 hover:bg-orange-600 text-gray-900 font-bold rounded-lg transition-colors duration-200 mt-4">
            Renvoyer le code
        </button>
    </div>

    <script>
        document.getElementById('username').addEventListener('blur', async function () {
            let username = document.getElementById('username').value;
            username = username.trim().replace(/[^a-zA-Z0-9-]/g, '');

            const statusEl = document.getElementById('usernameStatus');

            if (!username) {
                statusEl.textContent = "";
                return;
            }

            try {
                const res = await fetch(`/api/auth/check-username`, {
                    method: "POST",
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username: username })
                });
                const data = await res.json();

                if (data.exists == true) {
                    statusEl.textContent = "‚ùå Ce pseudo est d√©j√† pris";
                    statusEl.style.color = "red";
                } else if (data.exists == false) {
                    statusEl.textContent = "‚úÖ Ce pseudo est disponible";
                    statusEl.style.color = "lightgreen";
                } else if (data.message) {
                    statusEl.textContent = "‚ùå " + data.message;
                    statusEl.style.color = "red";
                } else {
                    statusEl.textContent = "‚ö†Ô∏è Erreur lors de la v√©rification";
                    statusEl.style.color = "orange";
                }
            } catch (err) {
                statusEl.textContent = "‚ö†Ô∏è Erreur lors de la v√©rification";
                statusEl.style.color = "orange";
            }
        });

        document.getElementById('resendBtn').addEventListener('click', async () => {
            try {
                const res = await fetch('/api/auth/resend-code', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: "<%= email %>" })
                });

                const data = await res.json();

                if (!data.success) alert("‚ùå Erreur : " + (data.message ?? "Impossible de renvoyer le code (maximum un envoi par minute!)"));

                console.log(data.message)
                window.location.reload()
            } catch (err) {
                alert("‚ö†Ô∏è Erreur r√©seau");
                console.log(err)
            }
        });

        document.getElementById('verifyBtn').addEventListener('click', async () => {
            const email = document.getElementById('email').value.trim();
            const username = document.getElementById('username').value.trim();
            const code = document.getElementById('code').value.trim();

            if (!username || !code) {
                alert("Veuillez remplir tous les champs");
                return;
            }

            try {
                const res = await fetch('/api/auth/verify-email', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, username, code })
                });

                const data = await res.json();

                if (data.success) {
                    window.location.href = data.redirect;
                } else {
                    alert("‚ùå Erreur : " + (data.message || "V√©rification √©chou√©e"));
                }
            } catch (err) {
                console.error(err);
                alert("‚ö†Ô∏è Erreur r√©seau");
            }
        });
    </script>
</body>

</html>